<script>
  // Zeige Cansu-Bild nur, wenn es existiert
  const avatar = document.getElementById("avatar");
  avatar.addEventListener("load", () => avatar.style.display = "block");
  avatar.addEventListener("error", () => avatar.style.display = "none");

  // Hugo Fallback (Emoji), falls hugo.webp aus irgendeinem Grund nicht l√§dt
  const duckImg = document.getElementById("duckImg");
  const duckEmoji = document.getElementById("duckEmoji");
  duckImg.addEventListener("error", () => {
    duckImg.style.display = "none";
    duckEmoji.style.display = "block";
  });

  function burstHearts(){
    const layer = document.getElementById("floatLayer");
    const hearts = ["‚ù§Ô∏è","üíó","üíñ","üíò","üíï","ü¶Ü"];
    for(let i=0;i<18;i++){
      const el = document.createElement("div");
      el.className = "heart";
      el.textContent = hearts[Math.floor(Math.random()*hearts.length)];
      el.style.left = (10 + Math.random()*80) + "%";
      el.style.bottom = (10 + Math.random()*20) + "px";
      el.style.animationDelay = (Math.random()*0.4) + "s";
      el.style.fontSize = (16 + Math.random()*18) + "px";
      layer.appendChild(el);
      setTimeout(()=>el.remove(), 3000);
    }
  }

  function reveal(){
    document.getElementById("msg").style.display = "block";
    burstHearts();
  }
</script>

